{
    "require": {
        "vlucas/phpdotenv": "^5.3",
        "php": ">=7.0"
    },
    "require-dev": {
        "10up/phpcs-composer": "dev-master"
    },
    "scripts": {
        "lint": "phpcs --standard=10up-Default --ignore=*/dist/* -s .",
        "lint-fix": "phpcbf ."
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
